# -----------------------------
# Application Settings
# -----------------------------
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:8002
FRONTEND_URL="http://localhost:3000"
SWAGGER_BASE_URL=http://localhost:8002/api

# -----------------------------
# Database (MySQL)
# -----------------------------
DATABASE_URL="mysql://root:@localhost:3306/Shaykhi"

# -----------------------------
# JWT Configuration
# -----------------------------
JWT_SECRET="your_jwt_secret_here"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_here"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_EXPIRES_IN="7d"

# -----------------------------
# Stripe Payments (optional)
# -----------------------------
STRIPE_SECRET_KEY=""
STRIPE_PUBLIC_KEY=""
STRIPE_WEBHOOK_SECRET=""

# -----------------------------
# Fawry Pay (optional, for mobile checkout link)
# -----------------------------
FAWRY_MERCHANT_CODE=""
FAWRY_SECURE_KEY=""
FAWRY_BASE_URL="https://atfawry.fawrystaging.com"
FAWRY_RETURN_URL_BASE="http://localhost:3000/student/subscriptions/callback"
FAWRY_CHARGE_PATH="/ECommerceWeb/Fawry/payments/charge"
FawryPay_Express_Checkout_Link_API="/fawrypay-api/api/payments/init"
FAWRY_CURRENCY="EGP"
FAWRY_AUTH_CAPTURE_MODE_PAYMENT=false
FAWRY_PAYMENT_EXPIRY=1800
FAWRY_ORDER_WEBHOOK_URL="http://localhost:8002/api/payments/fawry/webhook"
FAWRY_PAYMENT_METHOD="CARD"
FAWRY_LANGUAGE="ar-eg"
FAWRY_SIGNATURE_METHOD="SHA256"
FAWRY_SIGNATURE_VERSION="1"

# PayAtFawry Configuration
FAWRY_PAYATFAWRY_EXPIRY_HOURS=24
FAWRY_PAYATFAWRY_ENABLED=true

# -----------------------------
# Agora (video calls for bookings)
# -----------------------------
AGORA_APP_ID=
AGORA_APP_SECRET=
# Optional: use App Certificate from Agora Console if token fails (base64)
# AGORA_APP_CERTIFICATE=

# -----------------------------
# SMTP / Email (optional)
# -----------------------------
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@shaykhi.com"

# -----------------------------
# File upload
# -----------------------------
MAX_FILE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf
ALLOWED_VIDEO_TYPES=mp4,webm,mov,avi,mkv
