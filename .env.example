# -----------------------------
# Application Settings
# -----------------------------
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# -----------------------------
# Database (MySQL)
# -----------------------------
DATABASE_URL="mysql://root:@localhost:3306/Shaykhi"

# -----------------------------
# JWT Configuration
# -----------------------------
JWT_SECRET="your_jwt_secret_here"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_here"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_EXPIRES_IN="7d"

# -----------------------------
# Stripe Payments (optional)
# -----------------------------
STRIPE_SECRET_KEY=""
STRIPE_PUBLIC_KEY=""
STRIPE_WEBHOOK_SECRET=""

# -----------------------------
# Fawry Pay (optional, for mobile checkout link)
# -----------------------------
FAWRY_MERCHANT_CODE=""
FAWRY_SECURE_KEY=""
FAWRY_BASE_URL="https://atfawry.fawrystaging.com"
# الافتراضي: /ECommerceWeb/Fawry/payments/charge (من وثائق فوري). غيّره فقط لو وثائقك تذكر مساراً آخر.
FAWRY_CHARGE_PATH=""
FAWRY_RETURN_URL_BASE=""
# للتجربة فقط: true يرسل طلب مطابق لصفحة فوري (itemId 6b5f, 200 EGP, returnUrl فوري). يساعد في تشخيص 9929.
FAWRY_USE_TEST_PAYLOAD=""

# -----------------------------
# SMTP / Email (optional)
# -----------------------------
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@shaykhi.com"

# -----------------------------
# File upload
# -----------------------------
MAX_FILE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf
ALLOWED_VIDEO_TYPES=mp4,webm,mov,avi,mkv
